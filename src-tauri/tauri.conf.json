{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wynter Code",
  "version": "1.1.1",
  "identifier": "com.wynter.code",
  "build": {
    "beforeDevCommand": "pnpm build:farmwork && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build && pnpm build:farmwork",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Wynter Code",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 14,
          "y": 16
        }
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: https: http:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https: http: ws: wss:; frame-src *; child-src 'self' blob:; media-src 'self' blob: data: mediastream:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/WynterJones/wynter-code/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE2RUIxQjIwNUQ0MzU0QzEKUldUQlZFTmRJQnZyRmdhN3BjeklCODlJRUp4cm1EOUYxSS9Dc0dBVFk5Ni9ydkdydlRUTWE1WlYK"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "resources": {
      "../dist-farmwork": "dist-farmwork"
    },
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "Developer ID Application: Wynter Jones (7X2UF4FZHC)",
      "entitlements": null
    }
  }
}
